@model studentProjectWeb.Models.Entities.Student

<h2>Edit Student Details</h2>

@if (Model == null)
{
    <p>No student was found with this ID.</p>
}
else
{
    <form asp-action="Edit" method="post">
        <div class="mt-3">
            <input type="hidden" asp-for="Id" />
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" asp-for="Subscribed" />
            <label class="form-check-label">Challenger</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students">Delete</button>
        </div>
    </form>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
